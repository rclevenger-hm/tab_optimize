{
    "manifest_version": 3,
    "name": "Tab Optimize",
    "version": "1.0",
    "description": "Manage memory usage by suspending inactive tabs.",
    "permissions": [
      "storage",
      "tabs"
    ],
    "icons": {
      "48": "icon.png"
    },
    "background": {
      "service_worker": "background/background.js"
    },
    "browser_action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png"
      }
    },
    "options_ui": {
      "page": "options/options.html",
      "chrome_style": true
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["content.js"],
        "matches": ["<all_urls>"]
      }
    ],
    "permissions": ["storage", "activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "permissions": [
      "storage",
      "activeTab",
      "tabs"
    ]
  }
  